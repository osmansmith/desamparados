<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--BARRA SUPERIOR-->


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.ActionBar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:layout_constraintTop_toBottomOf="@+id/btn_map"
            app:menu="@menu/top_app_bar"
            app:title="@string/CrearAviso" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_addphoto" />



        <TextView
            android:id="@+id/pet_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DatosMascota"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NombreMascota"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Descripción"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/pet_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            />







        <EditText
            android:id="@+id/p_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="1234567890."
            android:ems="10"
            android:hint="Latitud"
            android:inputType="numberDecimal"
            android:textColor="#727272"
 />

        <EditText
            android:id="@+id/p_longitude"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:digits="1234567890."
            android:ems="10"
            android:hint="Longitud"

            android:inputType="numberDecimal"
            android:textColor="#727272"
 />

        <EditText
            android:id="@+id/p_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:textColor="#727272"
            />

        <Button

            android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textColor="@color/colorPrimary"
 />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.appbar.AppBarLayout>





</LinearLayout>